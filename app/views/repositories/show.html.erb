<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @repository.name %>
</p>

<p>
  <b>Url:</b>
  <%= @repository.url %>
</p>

<p>There are <%= @repository.commits.length %> Commits</p>

<ul>
  <% @repository.commits.each do |commit| %>
  <li>
    <span class="bubble"><%= commit.branch_name %></span> 
    <%= link_to commit.hash_id.to_s + " - " + commit.message, commit %>
  </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_repository_path(@repository) %> |
<%= link_to 'Back', repositories_path %>
